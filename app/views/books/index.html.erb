<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table class="table">
  <thead>
    <tr>
      <th>Pavadinimas</th>
      <th>Zanras</th>
      <th>Rasytojas</th>
      <th>Puslapiusk</th>
      <th>User Id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
    <% if book.user == current_user %>
      <tr>
        <td><%= book.pavadinimas %></td>
        <td><%= book.zanras %></td>
        <td><%= book.rasytojas %></td>
        <td><%= book.puslapiuSk %></td>
        <td><%= book.user_id %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path, class:"btn btn-secondary" %>
